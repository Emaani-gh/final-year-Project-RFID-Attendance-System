doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title My Profile
    style.
      /* Add your CSS styles here */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        text-align: center;
        margin-top: 0;
      }
      .personal-info p {
        margin-bottom: 10px;
      }

  body
    include header
    div.container
      h1 My Profile
      .personal-info
        p Name: #{user.name}
        p Student ID: #{user.studentId}
        p Username: #{user.username}
